<div class="pandemic-start">
  <h1>
    Stop the Pandemic
  </h1>
  <p class="mb-5">
    Play Pandemic with your friends online!
  </p>
  <BsButton @onClick={{this.createNewGame}} @type="primary">
    New Game
  </BsButton>
  <p class="my-1">
    or
  </p>
  <BsForm
    @formLayout="inline"
    @model={{this}}
    @onSubmit={{this.joinGame}}
    class="justify-content-center" as |form|
  >
    <form.element @controlType="text" @property="joinCode" as |el|>
      <el.control class="mr-2" placeholder="Code (e.g. ABCD)" />
    </form.element>
    <form.submitButton @type={{if form.isRejected 'danger' 'primary'}}>
      Join Game
    </form.submitButton>
  </BsForm>
  {{#if this.joinErrorMessage}}
    <p class="font-weight-light text-danger">
      {{this.joinErrorMessage}}
    </p>
  {{/if}}
</div>